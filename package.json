{
  "name": "vscode-schema-extractor",
  "publisher": "luxass",
  "displayName": "Schema Extractor",
  "description": "A extension used to extract Visual Studio Code Schemas",
  "icon": "media/icon.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.1"
  },
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:schema-extractor.extract-all",
    "onCommand:schema-extractor.extract-one"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/vscode-schema-extractor.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "schema-extractor.extract-all",
        "title": "Extract Schemas",
        "category": "Schema Extractor"
      },
      {
        "command": "schema-extractor.extract-one",
        "title": "Extract Schema",
        "category": "Schema Extractor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run esbuild --minify",
    "esbuild": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild:build": "pnpm run esbuild --sourcemap",
    "esbuild:dev": "pnpm run esbuild --sourcemap --watch"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.73.1",
    "esbuild": "^0.15.14",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.1.3"
  }
}
