{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["es2020"],
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"useDefineForClassFields": true,
		"useUnknownInCatchVariables": false
	},
	"include": ["src/**/*"]
}